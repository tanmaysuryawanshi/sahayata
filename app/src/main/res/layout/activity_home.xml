<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFFFF"
    tools:context=".HomeActivity">

    <TextView
        android:id="@+id/homeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:fontFamily="sans-serif"
        android:textAlignment="center"
        android:text="Sahayata"
        android:textColor=" #fd8164"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/homeSubTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="12dp"
        android:fontFamily="sans-serif"
        android:textAlignment="center"
        android:text="Connecting Safety during Crisis"
        android:textSize="24sp"
        android:textColor="#E61B1B1B"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/homeTitle"/>
    <TextView
        android:id="@+id/homeDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Your lifeline in times of crisis."
        android:fontFamily="sans-serif"
        android:textColor="#CC2C2626"
        android:textSize="18sp"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/homeSubTitle"/>


    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:elevation="10dp"
        android:src="@drawable/img"
        android:layout_marginEnd="10dp"
android:layout_marginTop="20dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/homeDescription" />
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_gravity="center"
        app:cardCornerRadius="15dp"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="23dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="12dp"
app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/homeDescription"
        app:cardBackgroundColor="@color/white"

        app:cardElevation="5dp"
        android:id="@+id/idSOScard"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            >


            <TextView
                android:id="@+id/idSOScardtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="SOS"
                android:fontFamily="sans-serif"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"

                android:textStyle="bold"
                android:textSize="25sp"
                android:layout_margin="20dp"
                app:layout_constraintStart_toStartOf="parent"

                app:layout_constraintTop_toTopOf="parent" />



            <TextView
                android:id="@+id/iddescriptionSos"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:fontFamily="sans-serif-light"
                android:text="Click here to send SOS "
                android:textColor="#CC2C2626"
                android:textSize="14sp"
android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/idSOScardtitle" />











        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:elevation="10dp"
        android:src="@drawable/img_4"
        android:layout_marginEnd="10dp"
android:layout_marginTop="4dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idSOScard" />
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_gravity="center"
        app:cardCornerRadius="15dp"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="23dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/idSOScard"
        app:cardBackgroundColor="@color/white"

        app:cardElevation="5dp"
        android:id="@+id/idSurvivalCard"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            >


            <TextView
                android:id="@+id/idsurvivalCardtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Survival Guide"
                android:fontFamily="sans-serif"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"

                android:textStyle="bold"
                android:textSize="25sp"
                android:layout_margin="20dp"
                app:layout_constraintStart_toStartOf="parent"

                app:layout_constraintTop_toTopOf="parent" />



            <TextView
                android:id="@+id/iddescriptionsurvivalCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:fontFamily="sans-serif-light"
                android:text="Know what to in any situation"
                android:textColor="#CC2C2626"
                android:textSize="14sp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/idsurvivalCardtitle" />











        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:elevation="10dp"
        android:src="@drawable/img_6"
        android:layout_marginEnd="10dp"
android:layout_marginTop="10dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idSurvivalCard" />
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_gravity="center"
        app:cardCornerRadius="15dp"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="23dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/idSurvivalCard"
        app:cardBackgroundColor="@color/white"

        app:cardElevation="5dp"
        android:id="@+id/idChatCard"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            >


            <TextView
                android:id="@+id/idCharCardtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="offChat "
                android:fontFamily="sans-serif"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"

                android:textStyle="bold"
                android:textSize="25sp"
                android:layout_margin="20dp"
                app:layout_constraintStart_toStartOf="parent"

                app:layout_constraintTop_toTopOf="parent" />



            <TextView
                android:id="@+id/iddescriptionChatCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:fontFamily="sans-serif-light"
                android:text="Chat with nearby devices using wifi p2p"
                android:textColor="#CC2C2626"
                android:textSize="14sp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/idCharCardtitle" />











        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:elevation="10dp"
        android:src="@drawable/img_1"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idChatCard" />
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_gravity="center"
        app:cardCornerRadius="15dp"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="23dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/idChatCard"
        app:cardBackgroundColor="@color/white"

        app:cardElevation="5dp"
        android:id="@+id/idSafeZoneCard"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            >


            <TextView
                android:id="@+id/idSafeZoneCardtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Safe Zones"
                android:fontFamily="sans-serif"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"

                android:textStyle="bold"
                android:textSize="25sp"
                android:layout_margin="20dp"
                app:layout_constraintStart_toStartOf="parent"

                app:layout_constraintTop_toTopOf="parent" />



            <TextView
                android:id="@+id/iddescriptionSafeZoneCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:fontFamily="sans-serif-light"
                android:text="Know where safe zones are"
                android:textColor="#CC2C2626"
                android:textSize="14sp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/idSafeZoneCardtitle" />











        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>